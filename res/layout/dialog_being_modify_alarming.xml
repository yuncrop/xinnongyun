<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tishi_dialog_show_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/textsizebig" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/setp_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="@color/text_grey"
            android:textSize="16sp" />
        
        <net.simonvt.numberpicker.NumberPicker
            android:id="@+id/alarmingfrom_et"
            android:layout_width="70dp"
            android:layout_height="150dp"
            android:divider="@color/text_blue"
            android:gravity="center" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@string/dilaog_zhi"
            android:textColor="@color/text_grey"
            android:textSize="16sp" />

        <net.simonvt.numberpicker.NumberPicker
            android:id="@+id/alarmingto_et"
            android:layout_width="70dp"
            android:layout_height="150dp"
            android:divider="@color/text_blue"
            android:gravity="center" />

        <TextView
            android:id="@+id/alarmingto_et_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="bottom"
            android:text="@string/farming_from_to_humunit"
            android:textColor="@color/text_grey"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_cancel_selector"
            android:text="@string/dilaog_cancel"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/textsizebig" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/list_line" />

        <Button
            android:id="@+id/dialog_btn_submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_confirm_selector"
            android:text="@string/dilaog_submit"
            android:textColor="@color/text_green"
            android:textSize="@dimen/textsizebig" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:background="@drawable/radial_gradient" >

        <ImageView
            android:id="@+id/collectReturn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/return_button" />

        <TextView
            android:id="@+id/collectdetailname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/collectname_empty"
            android:textColor="@color/text_white"
            android:textSize="@dimen/textsizebig" />

        <ImageView
            android:id="@+id/btn_collect_detail_setting"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_selector"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/shezhi" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/list_line" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/list_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <com.xinnongyun.view.IconFontTextView
                    android:id="@+id/blowerIcon_tv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#77be30"
                    android:gravity="center"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/collectRefreshTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/progressBar1"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/collectRefreshTime_unit"
                    android:text="00:00"
                    android:textColor="@color/text_fe462e"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/collectRefreshTime_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/collectRefreshTime"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:text="更新"
                    android:textColor="@color/text_fe462e"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#92d4f6" >

                <LinearLayout
                    android:id="@+id/forceOpenClosell"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/slidemenu_item_selector"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.xinnongyun.view.IconFontTextView
                        android:id="@+id/forceOpenBlowerTv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/text_white"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="强制开合"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:id="@+id/clearClockll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/slidemenu_item_selector"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.xinnongyun.view.IconFontTextView
                        android:id="@+id/OpenOrClockTv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/text_white"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="解锁"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:id="@+id/settingsll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/slidemenu_item_selector"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.xinnongyun.view.IconFontTextView
                        android:id="@+id/settingsFreshTv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/text_white"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/robot_detial_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/list_line"
                android:dividerHeight="1dp"
                android:fadingEdge="none"
                android:listSelector="@drawable/slidemenu_item_selector"
                android:scrollbars="none" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/list_line" >
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/list_line" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainfragment_video_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="invisible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/bg_clolr_white" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:id="@+id/journal_video_list_above"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_clolr_white" />
            <ListView
                android:layout_below="@+id/journal_video_list_above"
                android:id="@+id/journal_video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/transparent"
                android:dividerHeight="20dp"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:listSelector="@drawable/slidemenu_item_selector" >
            </ListView>
           
        </RelativeLayout>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/bg_clolr_white" >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
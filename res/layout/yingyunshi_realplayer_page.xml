<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gesture-image="http://schemas.monkey.com/android"
    android:id="@+id/realplay_display_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weather_station_detail"
        android:layout_below="@+id/realplay_top_bar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/weatherStationdetailll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/weather_station_head_tem_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/weather_station_head_coo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defalut_"
                        android:textColor="#0292db"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pm_unit"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/PM25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_station_head_tem_ll"
                    android:layout_centerHorizontal="true"
                    android:text="@string/pm25"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="#e0e0e0" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/weather_station_head_tem_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/weather_station_head_tem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defalut_"
                        android:textColor="#0292db"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/farming_from_to_temunit"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_station_head_tem_ll"
                    android:layout_centerHorizontal="true"
                    android:text="@string/tem"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="#e0e0e0" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/weather_station_head_tem_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/weather_station_head_hum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defalut_"
                        android:textColor="#0292db"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/farming_from_to_humunit"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_station_head_tem_ll"
                    android:layout_centerHorizontal="true"
                    android:text="@string/hum"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="#e0e0e0" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/weather_station_head_tem_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/weather_station_head_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defalut_"
                        android:textColor="#0292db"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/farming_from_to_lightunit"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_station_head_tem_ll"
                    android:layout_centerHorizontal="true"
                    android:text="@string/light"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/weatherLoacationll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/weather_station_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/dingwei"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/haiba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/realplay_area"
        android:layout_below="@+id/weather_station_detail"
        android:layout_width="fill_parent"
        android:layout_height="300dp" >

        <SurfaceView
            android:id="@+id/realplay_wnd_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent" >

            <com.videogo.widget.PagesGallery
                android:id="@+id/realplay_pages_gallery"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:spacing="0dp" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/realplay_control_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/realplay_wnd_sv"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center|center_vertical" >

                <ImageButton
                    android:id="@+id/realplay_play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/playbtn_selector"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/realplay_stop_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stopbtn_selector" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realplay_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:background="@drawable/radial_gradient" >

        <ImageView
            android:id="@+id/realplay_back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/return_button" />

        <TextView
            android:id="@+id/realplay_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:textColor="@color/text_white"
            android:textSize="@dimen/textsizebig"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_collect_detail_setting"
            android:background="@drawable/slidemenu_item_selector"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/btn_collect_detail_setting"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_selector"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/shezhi" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainfragment_farm_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="invisible" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/pulltorefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/list_line"
            android:scrollbars="none"
            android:dividerHeight="5dp"
            android:fadingEdge="none" >
        </ListView>

        <RelativeLayout
            android:id="@+id/farm_main_internet_error"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff9b1"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/internet_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="@string/mainfarm_internrt_error"
                android:textColor="@color/text_black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/internet_error_tv"
                android:src="@drawable/interneterror_iv" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>